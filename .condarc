# installing a new environments add these packages by default
create_default_packages:
  - python
  - pip
  - ipython
  - ipdb
  - jupyter
  - notebook
  - pylint
  - pyserial
  - git+https://github.com/bioconda/bioconda-utils.git

# implies always using the --yes option whenever asked to proceed
always_yes: true

channels:
  - bioconda
  - conda-forge
  - defaults
